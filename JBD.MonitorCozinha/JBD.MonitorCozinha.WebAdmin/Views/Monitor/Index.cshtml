@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monitor Cozinha</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
</head>
<body>
    <div style="text-align:right; font-size:25px; margin-right:30px;"><b>@Controle.ControleAcesso.Unidade</b></div>
    <input type="hidden" id="IdEmpresa" name="IdEmpresa" value="@Controle.ControleAcesso.IdEmpresa" />
    <input type="hidden" id="IdUnidade" name="IdUnidade" value="@Controle.ControleAcesso.IdUnidade" />
    <header>
        <div class="container-fluid mt-2" id="divTop">
            <table class="table table-bordered" style="border: 5px solid #dee2e6 !important;">
                <thead>
                    <tr class="col-md-12" style="background-color:Gainsboro">
                        <th style="width:33%; border: 5px solid #dee2e6 !important; font-size:30px; text-align: center;">
                            À FAZER:
                        </th>
                        <th style="width:33%; border: 5px solid #dee2e6 !important; font-size:30px; text-align: center;">
                            FAZENDO:
                        </th>
                        <th style="width:33%; border: 5px solid #dee2e6 !important; font-size:30px; text-align: center;">
                            PRONTO:
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </header>

    <div id="divMonitorTvBody" class="container-fluid"></div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid" style="text-align:center">
            &copy; 2019 - JBD.MonitorCozinha.WebAdmin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/js/Views/Monitor/Monitor.js"></script>
    </environment>
</body>
</html>
<div id="rodape"></div>
