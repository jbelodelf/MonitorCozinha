@model IEnumerable<JBD.MonitorCozinha.WebAdmin.Models.EmpresaViewModel>

    <table class="table table-striped table-bordered table-hover" id="tbListarEmpresas">
        <thead>
            <tr>
                @*<th>
                    @Html.DisplayNameFor(model => model.IdEmpresa)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.RazaoSocial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NomeFantasia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CNPJ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InscricaoEstadual)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InscricaoMunicipal)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.IdStatus)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.IdEmpresa)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.RazaoSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeFantasia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CNPJ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InscricaoEstadual)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InscricaoMunicipal)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.IdStatus)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCadastro)
                    </td>
                    <td>
                       <a href="javascript:;" onclick="Empresa.Editar(@item.IdEmpresa)" title="Editar"><i class="fas fa-edit"></i></a>
                       <a href="javascript:;" onclick="Empresa.Excluir(@item.IdEmpresa)" title="Excluir"><i class="fas fa-trash"></i></a>
                        @*@Html.ActionLink("Edit", "Edit", new { id=item.IdEmpresa }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script src="~/lib/fontawesome/fontawesome-free-5.9.0-web/js/all.js"></script>